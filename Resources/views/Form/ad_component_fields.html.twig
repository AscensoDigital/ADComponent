{% extends 'bootstrap_3_horizontal_layout.html.twig' %}

{% block form_widget -%}
    {% spaceless %}
        {{- parent() -}}
        {% if ad_component_help is defined and not (pre_addon is defined or pre_addon_icon is defined or post_addon is defined or post_addon_icon is defined) %}
            <div class="bg-info">{{ ad_component_help }}</div>
        {% endif %}
    {% endspaceless %}
{%- endblock form_widget %}

{% block form_widget_simple -%}
    {% if pre_addon is defined or pre_addon_icon is defined or post_addon is defined or post_addon_icon is defined %}
        <div class="input-group">
            {% if pre_addon_icon is defined %}
                <span class="input-group-addon"><i class="{{ pre_addon_icon }}"></i></span>
            {% elseif pre_addon is defined %}
                <span class="input-group-addon">{{ pre_addon | raw }}</span>
            {% endif %}
            {{- parent() -}}
            {% if post_addon_icon is defined %}
                <span class="input-group-addon"><i class="{{ post_addon_icon }}"></i></span>
            {% elseif post_addon is defined %}
                <span class="input-group-addon">{{ post_addon | raw }}</span>
            {% endif %}
        </div>
        {% if ad_component_help is defined %}
            <div class="bg-info">{{ ad_component_help }}</div>
        {% endif %}
    {% else %}
        {{- parent() -}}
    {% endif %}
{%- endblock form_widget_simple %}

{% block icon_widget %}
    {% if value is not empty %}
        {% set pre_addon_icon = value | trim %}
    {% endif %}
    {{- block('form_widget_simple') -}}
{% endblock %}